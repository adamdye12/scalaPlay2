# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index

GET         /items                 controllers.Application.listItems
POST        /items                 controllers.Application.createItem

# Delete Items
GET         /deleteitems         controllers.Application.viewDeleteItem(id: Int ?= 0)
POST        /deleteitems         controllers.Application.deleteItem(id: Int)
#upload images

GET         /uploadimage           controllers.Application.viewUpload
POST        /uploadimage           controllers.Application.upload

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)

    